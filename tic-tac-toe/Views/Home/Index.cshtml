@{
    ViewData["Title"] = "Home Page";
    string username = User.Identity.Name;
}
@model IEnumerable<tic_tac_toe.Models.User>


<div class="container-fluid">
    <div class="h3">
        Welcome, <span id="ActiveUser">@username</span>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <p class="bg-primary card-header text-center text-light card">Active sessions</p>
            <div class="card-body bg-light">
                <!-- for each session in active ones -> output info -->
                <div class="list-group">
                    <div id="activeGames" class="list-group-item">
                        <!-- Active games container -->
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <p class="bg-primary card-header text-center text-light">Create session</p>
            <div class="card-body bg-light">
                <a id="no" asp-controller="Home" asp-action="Game" class="btn btn-outline-primary justify-content-center w-100">Create</a>
            </div>
        </div>
    </div>
</div>

